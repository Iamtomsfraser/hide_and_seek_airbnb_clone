<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top" style="background-color: rgba(255, 255, 255, 0.8); backdrop-filter: blur(8px);">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="fas fa-tree-city"></i>
    <% end %>
     <a class="navbar-brand" href="#"> Hide n Seek</a>

    <!-- Centered Search Bar -->
    <div class="mx-auto d-flex">
      <form class="d-flex">
        <input class="form-control me-2 flex-grow-0" type="search" placeholder="Seek adventure" aria-label="Search" style="height: 38px;">
        <button class="btn btn-outline-success" type="submit" style="height: 38px;">Seek</button>
      </form>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
              <%= link_to raw('<i class="fa-solid fa-plus"></i> Join the Cause'), "#", class: "nav-link" %>
            </li>
          <li class="nav-item active">
            <%= link_to raw('<i class="fa-solid fa-book-atlas"></i> My Bookings'), my_bookings_path(@user) , class: "nav-link" %>
          </li>
          </li>
          <li class="nav-item dropdown">
            <li class="nav-item dropdown">
              <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="<%= asset_path('profile_pic.png') %>" class="avatar" alt="dropdown menu">
              </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to raw('<i class="fa-solid fa-user"></i> Profile'), "#", class: "dropdown-item" %>
                <%= link_to raw('<i class="fa-solid fa-star"></i> Favourites'), "#", class: "dropdown-item" %>
                <%= link_to raw('<i class="fa-solid fa-gear"></i> Settings'), "#", class: "dropdown-item" %>
                <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                  <i class="fa-solid fa-right-from-bracket"></i> Log Out
                <% end %>
              </div>
          </li>


        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="row mt-2">
  <% @flats.each do |flat|  %>
    <div class="col-lg-3 md-6 mb-3 cards d-flex flex-column justify-content-between">
      <a href=""><img src="<%= flat.photo_url %>" class="card-img-top" alt="Property Image"></a>
      <div class="">
        <p class=""><%= flat.name %></p>
        <p>⭐️⭐️⭐️⭐️☆ 4.0</p>
        <h6><i class="fa-solid fa-location-dot"></i> <%= flat.city %> </h6>
        <p><strong>￡<%= flat.price_per_night.round() %></strong> night</p>
      </div>
      <div class="d-flex align-items-end">
        <a href="#" class="btn btn-primary my-2 mx-2">View Details</a>
      </div>
    </div>
  <% end %>
</div>

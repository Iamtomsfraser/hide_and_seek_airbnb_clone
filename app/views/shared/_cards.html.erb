<div class="container mt-4">
  <div class="row">
    <% @flats.each do |flat|  %>
      <div class="col-lg-3 md-6 mb-3">
        <div class="cards">
          <a href=""><img src="https://a0.muscache.com/im/pictures/miso/Hosting-608629036284538849/original/68b2f914-7365-4482-9eb5-23089f8f3800.jpeg?im_w=720" class="card-img-top" alt="Property Image"></a>
          <div class=" mt-2 mx-2">
            <p class=""><%= flat.name %></p>
            <p>⭐️⭐️⭐️⭐️☆ 4.0</p>
          </div>
          <div class="mx-2 my-1">
            <h6><i class="fa-solid fa-location-dot"></i> <%= flat.location %> </h6>
            <p><strong>￡<%= flat.price_per_night.round() %></strong> night</p>
          </div>
          <div class="d-flex align-items-end">
            <a href="#" class="btn btn-primary my-2 mx-2">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

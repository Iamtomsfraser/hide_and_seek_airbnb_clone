<div class="container mt-4">
  <div class="row">
    <% @flats.each do |flat|  %>
      <div class="col-lg-3 md-6 mb-3">
        <div class="cards">
          <a href=""><img src="https://loremflickr.com/500/600/house" class="card-img-top" alt="Property Image"></a>
          <div class=" mt-2 mx-2">
            <p class=""><%= flat.name %></p>
            <p>⭐️⭐️⭐️⭐️☆ 4.0</p>
          </div>
          <div class="mx-2 my-1">
            <h6><i class="fa-solid fa-location-dot"></i> <%= flat.location %> </h6>
            <p><strong>￡<%= flat.price_per_night.round() %></strong> night</p>
          </div>
          <div class="d-flex align-items-end">
            <a href="#" class="btn btn-primary my-2 mx-2">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

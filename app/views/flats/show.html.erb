<div class="container mt-5">
    <div class="container-image-map d-flex">
        <%# <div id="carouselExampleControls" class="carousel slide d-flex justify-content-between" data-ride="carousel"> %>
          <div class="image w-100 m-4">
            <% if @flat.photo_url.present? %>
              <%= image_tag @flat.photo_url, height:400, crop: :fill, class: "card-img-top" %>
            <% else %>
              <img src="<%= @flat.photos.last.url %>" class="w-100" alt="Flat image">
            <% end %>
          </div>
          <div class="mt-4" style="width: 100%; height: 400px;"
              id ="map"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= 'pk.eyJ1IjoiaWFtdG9tc2ZyYXNlciIsImEiOiJjbHQ0dXM3Z2swNjBxMmlwaDRnMHp5YWlmIn0.dxrZR4rokX5XaEY1B7bj6A'%>">
          </div>

        <%# </div> %>
    </div>

    <div class="container-info d-flex justify-content-between">

          <div class="mb-3">
            <%= f.label :start_date, "Start Date", class: "form-label" %>
            <%= f.date_field :start_date, class: "form-control", placeholder: "Select start date", data: { controller: "datepicker" } %>
          </div>

          <div class="mb-3">
            <%= f.label :end_date, "CHECKOUT", class: "form-label" %>
            <%= f.date_field :end_date, class: "form-control", placeholder: "Select end date", data: { controller: "datepicker" } %>
          </div>

          <div class="mb-3">
          <%= f.label :number_of_guests, "GUESTS", class: "form-label" %>
          <%= f.select :number_of_guests, (1..10), { prompt: "Select number of guests" }, class: "form-control" %>
        </div>

          <%= f.submit "Reserve", class: "btn btn-primary w-100 btn-rounded mt-2" %>
        <% end %>

            </div>
        </div>
    </div>
                <div class="bottom-buttons">
                  <%= link_to '<i class="btn btn-outline-danger"> Delete </i>'.html_safe, flat_path(@flat), class: "delete-btn position-fixed-bottom", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove your #{@flat.name}?" } %>
                  <%= link_to '<i class="btn btn-outline-success"> Edit </i>'.html_safe, flat_path(@flat), class: "edit-btn position-fixed-bottom", data: { turbo_method: :edit, turbo_confirm: "Are you sure you want to remove your #{@flat.name}?" } %>
                </div>
</div>

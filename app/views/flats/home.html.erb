<div class="banner">
  <div class="banner-text">
    <h1>Welcome to Hide n Seek</h1>
    <p>Your gateway to uncovering hidden gems around the globe!</p>
  </div>
  <div class='mt-3'>
    <div class="row justify-content-center">
      <div class="col-sm-8 my-3">
        <%= render "shared/search_bar" %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <h1 class="mt-4">Top destinations</h1>
  <div class="d-flex justify-content-between mt-4">
    <div class="d-flex flex-column cards ">
      <%= link_to searches_path(query: "France") do %>
    <%= image_tag "https://img.lemde.fr/2022/07/10/0/0/6000/4000/1440/960/60/0/df0bb81_1657464661367-hanslucas-hl-dmeyer-1222827.jpg" %>
        <div class="overlay">
          <h6>FRANCE</h6>
        </div>
      <% end %>
    </div>
    <div class="d-flex flex-column cards">
      <%= link_to searches_path(query: "Spain") do %>
        <%= image_tag "https://i.ytimg.com/vi/YWFjLrB6p9I/maxresdefault.jpg", class: "card-img-top" %>
        <div class="overlay">
          <h6>SPAIN</h6>
        </div>
      <% end %>
    </div>
    <div class="d-flex flex-column cards">
      <%= link_to searches_path(query: "United kingdom") do %>
      <%= image_tag "https://media.istockphoto.com/id/1162348829/photo/traditional-idyllic-english-countryside-village-with-cosy-cottages-and-narrow-road.jpg?s=612x612&w=0&k=20&c=EPWKIPbAmpfjiLhXmhnuAGjnAUgk26FY8PEfItT9zxY="%>
        <div class="overlay text-center">
          <h6>UNITED KINGDOM</h6>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <h1 class="mt-5">Suggested properties</h1>
  <div class="row mt-4">
    <%= render "shared/cards" %>
  </div>
</div>

<div class="review-banner mt-3 py-5">
  <div class="container py-4 d-flex flex-column justify-content-center align-items-center">
    <h2>Rated <em>"excellent"</em> for a reason.</h2>
    <p>Our platform specializes in curating a collection of extraordinary accommodations ranging from cozy treehouses nestled in lush forests to charming houseboats bobbing on serene waters</p>
    <%= image_tag ("trustpilot.png"), style:'height:40px;width:300px;' %>
  </div>
</div>

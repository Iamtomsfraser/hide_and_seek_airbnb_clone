<div class="container mt-5">
  <h1>Properties near <%= @query %> </h1>
  <div class='my-4 w-50'>
    <%= render "shared/search_bar" %>
  </div>

  <div class="d-flex justify-content-between">

    <div class="list" style="width:600px;">
      <% if @message.present? %>
        <div class="container my-5 text-center" id="result">
          <h4><%= @message %></h4>
        </div>
      <% else %>
        <% @flats.each do |flat| %>
          <div class="card-product mb-3">
            <%= link_to flat_path(flat) do %>
              <% if flat.photo_url.present? %>
                <%= image_tag flat.photo_url %>
              <% else %>
                <%= cl_image_tag flat.photos.last.key %>
              <% end %>
            <% end %>
            <div class="card-product-infos ">
              <div class="d-flex justify-content-between">
                <div>
                  <%= link_to flat_path(flat) do %>
                    <h2><%= flat.name %></h2>
                  <% end %>
                  <h6><i class="fa-solid fa-location-dot mt-1"></i> <%= flat.city %> </h6>
                </div>
              </div>
            <div>
                <p> ★ <%= rand(3..5) %>.0</p>
                <p><strong>￡<%= flat.price_per_night.round() %></strong> night</p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="map">
      <img src="https://media.wired.com/photos/59269cd37034dc5f91bec0f1/master/w_2240,c_limit/GoogleMapTA.jpg" alt="" style="width:600px;">
    </div>
  </div>
</div>

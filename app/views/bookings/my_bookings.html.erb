
<div class="mt-5 d-flex flex-wrap gap-5">
  <% @bookings.each do |booking| %>
 <div class="col-lg-2 col-md-6 mb-5 cards d-flex flex-column justify-content-between booking-card">
   <%= image_tag booking.flat.photo_url, class: "card-img-top", style:"max-width:100%"%>
  <h3><%= booking.flat.name %></h3>
  <ul>
    <li><%=booking.start_date%></li>
    <li><%=booking.end_date%></li>
  </ul>
  <%= link_to destroy_booking_path(booking), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
</div>
<% end %>
</div>
